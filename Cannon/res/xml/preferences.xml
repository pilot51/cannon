<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<CheckBoxPreference android:key="prefClassic" android:title="Classic Mode" android:summaryOn="v1" android:summaryOff="v2" android:defaultValue="false" />
	<CheckBoxPreference android:key="prefCollide" android:title="Collision" android:summary="Collision between projectile &amp; target" android:defaultValue="true" />
	<EditTextPreference android:key="prefGridX" android:title="Grid X scale" android:summary="Scale to measure ground distance" android:dialogTitle="Set X-grid size" android:dialogMessage="Set the distance (in meters) between each grid line measuring ground distance" android:defaultValue="50" android:inputType="phone" android:digits="0123456789" />
	<EditTextPreference android:key="prefGridY" android:title="Grid Y scale" android:summary="Scale to measure altitude" android:dialogTitle="Set Y-grid size" android:dialogMessage="Set the distance (in meters) between each grid line measuring altitude" android:defaultValue="50" android:inputType="phone" android:digits="0123456789" />
	<PreferenceScreen android:title="v2-only features">
		<PreferenceCategory android:title="Physical borders">
			<CheckBoxPreference android:key="prefGround" android:title="Ground" android:defaultValue="true" />
			<CheckBoxPreference android:key="prefRoof" android:title="Roof" android:defaultValue="false" />
			<CheckBoxPreference android:key="prefLeftWall" android:title="Left Wall" android:defaultValue="false" />
			<CheckBoxPreference android:key="prefRightWall" android:title="Right Wall" android:defaultValue="false" />
		</PreferenceCategory>
	</PreferenceScreen>
	<PreferenceScreen android:title="v1-only features">
		<CheckBoxPreference android:key="prefTrail" android:title="Projectile trail" android:defaultValue="true" />
		<CheckBoxPreference android:key="prefRepeat" android:title="Auto-fire" android:summaryOn="Another projectile is fired when previous one completes" android:summaryOff="Manual: Press center D-Pad/wheel or touchscreen to refire" android:defaultValue="false" />
	</PreferenceScreen>
	<PreferenceCategory android:title="Colors">
		<EditTextPreference android:key="prefColorBG" android:title="Background color" android:dialogTitle="Choose background color" android:dialogMessage="@string/color_dialog_msg" android:defaultValue="black" android:digits="#0123456789abcdefghijklmnopqrstuvwxyz" />
		<EditTextPreference android:key="prefColorGrid" android:title="Grid color" android:dialogTitle="Choose grid color" android:dialogMessage="@string/color_dialog_msg" android:defaultValue="green" android:digits="#0123456789abcdefghijklmnopqrstuvwxyz" />
		<EditTextPreference android:key="prefColorTarget" android:title="Target color" android:dialogTitle="Choose target color" android:dialogMessage="@string/color_dialog_msg" android:defaultValue="red" android:digits="#0123456789abcdefghijklmnopqrstuvwxyz" />
		<EditTextPreference android:key="prefColorProj" android:title="Projectile color" android:dialogTitle="Choose projectile color" android:dialogMessage="@string/color_dialog_msg" android:defaultValue="yellow" android:digits="#0123456789abcdefghijklmnopqrstuvwxyz" />
	</PreferenceCategory>
	<PreferenceCategory>
		<Preference android:key="prefResetValues" android:title="Reset values" android:summary="Reset values to example defaults" />
		<Preference android:key="prefResetPrefs" android:title="Reset preferences" android:summary="Reset preferences to defaults" />
	</PreferenceCategory>
</PreferenceScreen>